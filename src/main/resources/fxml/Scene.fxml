<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.ufo.FXMLController">
   <center>
      <HBox spacing="15.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="FORMA:">
               <HBox.margin>
                  <Insets top="3.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="txtMagicBox" prefWidth="150.0" />
            <Button fx:id="btnAvvistamenti" mnemonicParsing="false" onAction="#handleAvvistamenti" text="Avvistamenti" />
         </children>
      </HBox>
   </center>
   <top>
        <Label fx:id="label" contentDisplay="TOP" minHeight="16" minWidth="69" text="UFO" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <TextArea fx:id="txtResult" editable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
